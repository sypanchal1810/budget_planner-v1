<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>signupServlet</servlet-name>
        <servlet-class>com.planner.servlet.signupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.planner.servlet.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.planner.servlet.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createNewPlanServlet</servlet-name>
        <servlet-class>com.planner.servlet.createNewPlanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewExpenseServlet</servlet-name>
        <servlet-class>com.planner.servlet.addNewExpenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signupServlet</servlet-name>
        <url-pattern>/signupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createNewPlanServlet</servlet-name>
        <url-pattern>/createNewPlanServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewExpenseServlet</servlet-name>
        <url-pattern>/addNewExpenseServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
